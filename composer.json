{
    "name": "antidot/logger",
    "description": "Anti.Framework logger adapter library",
    "keywords": [
        "psr-3",
        "psr-11",
        "psr-15"
    ],
    "type": "library",
    "license": "BSD-2.0",
    "authors": [
        {
            "name": "kpicaza",
            "email": "kpicaza.sound@gmail.com"
        }
    ],
    "require": {
        "php": "^7.2.13",
        "psr/http-server-middleware": "^1.0",
        "psr/log": "^1.1"
    },
    "require-dev": {
        "phpro/grumphp": "^0.15.0",
        "phpstan/phpstan": "^0.11.5",
        "phpunit/phpunit": "^8.0",
        "squizlabs/php_codesniffer": "^3.4",
        "wshafer/psr11-monolog": "2.1.*"
    },
    "autoload": {
        "psr-4": {
            "Antidot\\Logger\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AntidotTest\\Logger\\": "test"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@inspect"
        ],
        "cs-check": "phpcs src --colors",
        "cs-fix": "phpcbf src --colors",
        "inspect": "phpstan analyse src -l7 --ansi",
        "test": "phpunit --colors=always"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "zf": {
            "config-provider": "Antidot\\Logger\\Container\\Config\\ConfigProvider"
        }
    },
    "suggest": {
        "wshafer/psr11-monolog": "Allow using middleware with monolog implementation using MonologFactory class"
    }
}
